<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_image_another_book"
    android:layout_gravity="center_vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bg_selector_gray"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/height_image_another_book"
        android:layout_height="@dimen/height_image_another_book"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/logo_512"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Another epub book"
        android:textSize="@dimen/name_book_text_size" />
</LinearLayout>

