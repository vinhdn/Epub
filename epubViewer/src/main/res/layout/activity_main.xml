<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_reading_screen"
        />
    <RelativeLayout
        android:id="@+id/book_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        >

        <RelativeLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent">

            <com.dteviot.epubviewer.Utils.SAutoBgImageButton
                android:id="@+id/previous_btn"
                android:layout_width="@dimen/height_image_button_small"
                android:layout_height="@dimen/height_image_button_small"
                android:layout_marginLeft="5dp"
                android:background="@drawable/move_leftx180" />

            <com.dteviot.epubviewer.Utils.SAutoBgImageButton
                android:id="@+id/next_btn"
                android:layout_width="@dimen/height_image_button_small"
                android:layout_height="@dimen/height_image_button_small"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/move_rightx180" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>